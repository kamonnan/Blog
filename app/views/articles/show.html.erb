<h1 class="text-3xl font-bold mb-4"><%= @article.title %></h1>

<p class="mb-6"><%= @article.body %></p>

<ul class="space-y-2">
  <li><%= link_to "Edit", edit_article_path(@article), class: "text-blue-500 hover:underline" %></li>
  <li><%= link_to "Destroy", article_path(@article), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }, class: "text-red-500 hover:underline" %></li>
</ul>

<h2 class="text-2xl mt-8">Comments</h2>
<%= render @article.comments %>

<h2 class="text-2xl font-semibold mt-8">Add a comment:</h2>
<%= render "comments/form", article: @article %>
