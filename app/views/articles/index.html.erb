<div class="max-w-4xl mx-auto p-6 bg-white shadow-md rounded-lg">
  <!-- Header -->
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Articles</h1>

  <!-- Articles List -->
  <ul class="space-y-4">
    <% @articles.each do |article| %>
      <% unless article.archived? %>
        <li class="p-4 bg-gray-100 rounded-lg shadow-sm hover:bg-gray-200">
          <%= link_to article.title, article, class: "text-lg font-medium text-blue-500 hover:text-blue-700" %>
        </li>
      <% end %>
    <% end %>
  </ul>

  <!-- New Article Button -->
  <div class="mt-6">
    <%= link_to "New Article", new_article_path, class: "inline-block px-4 py-2 bg-blue-500 text-white font-semibold rounded-lg shadow-md hover:bg-blue-600" %>
  </div>
</div>